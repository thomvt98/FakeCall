<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvphoto"
            android:text="Photo"
            android:textColor="#000"
            android:textSize="@dimen/_16ssp"
            />
        <ImageView
            android:layout_width="@dimen/_54sdp"
            android:layout_height="@dimen/_54sdp"
            android:id="@+id/imgphoto"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_action_select_photo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_56sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvname"
            android:text="Name"
            android:textColor="#000"
            android:textSize="@dimen/_10ssp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ednamephne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private Number" />
            <ImageView
                android:layout_width="@dimen/_24ssp"
                android:layout_height="@dimen/_24ssp"
                android:id="@+id/imgnuber"
                android:layout_marginLeft="@dimen/_15ssp"
                android:src="@drawable/lg_g2_picture_unknown"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvnumber"
            android:text="Number"
            android:textColor="#000"
            android:textSize="@dimen/_10ssp"
            />
        <EditText
            android:id="@+id/edphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000000" />
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_phone_android"
            android:id="@+id/im_selectphone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/tvselectphone"
            android:text="Select Phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4cd3f1"
            android:id="@+id/tvsamsung"
            android:text="samsung S4"/>
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_32sdp"
                android:src="@drawable/ic_record_voice"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:id="@+id/im_addvoice"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/tvaddvoice"
                android:text="Add Voice"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_build_black"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:id="@+id/im_moreSetting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/tvmoresetting"
                android:text="More Settings"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="#adbbf7"
        android:text="SAVE AND MAKE CALL "
        android:id="@+id/btsave"/>
</LinearLayout>